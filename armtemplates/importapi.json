{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "apimServiceName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Name of APIM instance"
            }
        },
        "apiName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Name of APIM instance"
            }
        },
        "serviceUrl": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Backend url for the imported api"
            }
        },
        "swaggerUrl": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Swagger url of the imported api"
            }
        },
        "suffix": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The suffix of api in Api Management Service. It must be unique."
            }
        }, 
        "policyContent": {
            "type": "string"
        }
    },
    "variables": {
        "name": "[parameters('apiName')]"
    },
    "resources": [
        {
            "name": "[concat(parameters('apimServiceName'), '/', variables('name'))]",
            "type": "Microsoft.ApiManagement/service/apis",
            "apiVersion": "2017-03-01",
            "properties": {
                "description": "Api Created From json",
                "authenticationSettings": {
                    "oAuth2": {
                        "oAuth2": null,
                        "openid": null
                    }
                },
                "subscriptionKeyParameterNames": {
                    "header": "Ocp-Apim-Subscription-Key",
                    "query": "subscription-key"
                },
                "type": "http",
                "isCurrent": true,
                "isOnline": true,
                "displayName": "[variables('name')]",
                "serviceUrl": "[parameters('serviceUrl')]",
                "path": "[parameters('suffix')]",
                "protocols": [
                    "http",
                    "https"
                ],
                "contentValue": "[parameters('swaggerUrl')]",
                "contentFormat": "swagger-link-json"
            },
            "resources": [
                {
                    "apiVersion": "2017-03-01",
                    "type": "policies",
                    "name":"policy",
                    "dependsOn": [
                        "[concat('Microsoft.ApiManagement/service/', parameters('apimServiceName'), '/apis/exampleApiWithPolicy')]"
                    ],
                    "properties":{
                        "policyContent": "[parameters('policyContent')]"
                    }
                }
            ]
        }
    ]
}